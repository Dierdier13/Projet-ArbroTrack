{% extends "../layouts/base.html.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/main.css">
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
{% endblock %}

{% block title %}
	<title>{{ title }}</title>
{% endblock %}

{% block main %}
	<main class="flex flex-col gap-8 w-full ml-0 lg:w-5/6 lg:ml-[16.666%] xl:w-6/7 xl:ml-[14.258%] 2xl:w-7/8 2xl:ml-[12.5%] min-h-[calc(100vh-3.5rem)] bg-[#50693C]/50 backdrop-blur-xs px-8 md:px-16 lg:px-24 xl:px-32 py-8">
		<section class="flex flex-col gap-6">
			<div class="w-full flex items-center justify-center">
				<h2 class="text-white text-xl md:text-2xl lg:text-4xl text-center font-semibold bg-[#1B3C01]/60 backdrop-blur-2xl shadow-lg rounded-lg px-2 py-1">Bienvenue
					{{ user.name }}
					{{ user.firstname }}</h2>
			</div>
			<div id="map" class="w-full h-80 rounded-lg"></div>
			<div class="flex justify-between flex-col md:flex-row w-full bg-[#1B3C01]/60 backdrop-blur-2xl shadow-lg rounded-lg p-4 gap-2 lg:gap-0">
				<button class="max-w-40 cursor-pointer bg-green-600 hover:bg-green-800 text-white font-medium px-2 py-1 rounded flex gap-2 flex-shrink-0 items-center justify-center transition duration-300" onclick="openModal('propertyModal')">
					<img src="/assets/images/add-photo.png" alt="API plantNet" class="w-6 h-6">
					<span>API PlantNet</span>
				</button>
				<div class="flex items-center w-full md:w-md">
					<form action="/" method="GET" class="flex w-full">
						<input type="text" name="search" placeholder="Rechercher une propriété." value="{{ searchTerm }}" class="w-full px-2 py-1 rounded-l-md bg-white border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"/>
						<button type="submit" class="max-w-40 cursor-pointer bg-green-600 hover:bg-green-800 text-white font-medium px-2 py-1 rounded flex gap-1 flex-shrink-0 items-center justify-center transition duration-300">
							<img src="/assets/images/search.png" alt="Rechercher" class="mr-1 w-6 h-6">
							<span>Rechercher</span>
						</button>
					</form>
				</div>
			</div>

		</section>

		<section class="flex flex-col gap-4">
			<div class="bg-[#1B3C01]/60 backdrop-blur-2xl rounded-lg p-4 relative">
				<div class="flex w-full items-center mb-8 relative gap-4 md:gap-0">
					<button class="max-w-1/3 cursor-pointer bg-green-600 hover:bg-green-800 text-white text-sm md:text-lg font-medium px-3 py-1 rounded flex gap-1 items-center justify-center transition duration-300" onclick="openModal('propertyModal')">
						<img src="/assets/images/add.png" alt="Ajouter propriété" class="w-6 h-6">
						<span>Propriété</span>
					</button>
					{% if isSearch %}
						<h2 class="w-full text-lg md:text-2xl lg:text-4xl text-white text-center font-semibold">Résultats de la recherche pour "{{ searchTerm }}"</h2>
					{% else %}
						<h2 class="w-full text-lg md:text-2xl lg:text-4xl text-white text-center font-semibold">Liste des Propriétés</h2>
					{% endif %}
				</div>
				{% if properties|length > 0 %}
					<div id="property-container" class="sortable-container flex flex-col gap-2">
						{% for property in properties %}
							<article data-id="{{ property.id }}" class="flex flex-col md:flex-row justify-between items-center w-full p-2 bg-[#C3CEA3] backdrop-blur-xs shadow-md rounded-lg border border-green-600 gap-1">
								<div class="flex flex-col md:flex-row items-center gap-1 md:gap-2 lg:gap-8 w-full  md:w-4/5">
									<a href="/property/{{ property.id }}" class="text-lg text-center md:text-start font-semibold text-[#1B3C01] hover:text-white w-full md:w-1/3">
										<h3>{{ property.name }}</h3>
									</a>
									<p class="text-[#1B3C01] w-full md:w-1/3">{{ property.adress }}</p>
									<p class="text-[#1B3C01] w-full md:w-1/3">{{ property.codePostal }}
										{{ property.city }}</p>
								</div>
								<div class="flex justify-center md:justify-end gap-1 w-full md:w-1/5">
									<a href="/property/{{ property.id }}" class="w-10 h-8 min-w-[2.5rem] min-h-[2rem] flex items-center justify-center px-2 py-1 bg-green-600 rounded-md shadow hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-400/75 transition duration-300">
										<img src="/assets/images/dashboard.png" alt="Dashboard" class="w-6 h-6">
									</a>
									<button onclick="openEditPropertyModal('{{ property.id }}')" class="cursor-pointer w-10 h-8 min-w-[2.5rem] min-h-[2rem] flex items-center justify-center px-2 py-1 bg-green-600 rounded-md shadow hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-400/75 transition duration-300">
										<img src="/assets/images/edit.png" alt="Modifier propriété" class="w-6 h-6">
									</button>
									<button onclick="openDeleteModal('deletePropertyConfirmModal', this)" data-id="{{ property.id }}" data-name="{{ property.name }}" class="cursor-pointer w-10 h-8 min-w-[2.5rem] min-h-[2rem] flex items-center justify-center px-2 py-1 bg-red-600 rounded-md shadow hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-red-400/75 transition duration-300">
										<img src="/assets/images/delete.png" alt="Supprimer propriété" class="w-6 h-6">
									</button>
								</div>
							</article>
						{% endfor %}
					</div>
				{% else %}
					<p class="text-white text-center py-4">
						{% if isSearch %}
							Aucune propriété trouvée pour la recherche "{{ searchTerm }}".
						{% else %}
							Aucune propriété enregistrée pour le moment.
						{% endif %}
					</p>
				{% endif %}
			</div>
		</section>
	</main>

{% endblock %}

{% block script %}
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
	<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
	<script src="/assets/js/sidebar.js"></script>
	<script src="/assets/js/map.js"></script>
	<script src="/assets/js/main.js"></script>
	<script src="/assets/js/modal.js"></script>
{% endblock %}
