{% extends "../layouts/base.html.twig" %}

{% block style %}
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block title %}
    <title>{{ title }}</title>
{% endblock %}

{% block main %}
    <main class="flex items-center justify-center min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8">
            <div class="text-center">
                <img src="/assets/images/Logo_final_sans_blanc.png" class="mx-auto h-20 w-auto" alt="Logo"/>
                <h1 class="mt-6 text-3xl font-bold text-green-900">ArboTrack votre Gestionnaire Arboricole</h1>
                <p class="mt-2 text-sm text-green-800">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Beatae neque asperiores id nulla,
                    consectetur a nihil, explicabo dolorum quo maiores incidunt nam, magni ipsam dolores ipsa nemo enim eos in?
                </p>
            </div>
            <div class="mt-8 bg-[#C3CEA3]/60 backdrop-blur-2xl p-8 shadow rounded-lg">
                <form action="/login" method="POST" class="space-y-6">
                    <h2 class="text-center text-2xl font-bold text-green-800">Se Connecter</h2>
                    {% if error.mail %}
                        <div class="text-red-500 text-sm text-center">{{ error.mail }}</div>
                    {% endif %}
                    <div>
                        <input type="text" id="mail" name="mail" value="{{ mail|default('') }}" placeholder="Entrez votre Mail" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 {% if error.mail %}border-red-500 focus:ring-red-500 bg-red-100{% else %}border-green-300 focus:ring-green-500{% endif %}">
                    </div>
                    {% if error.password %}
                        <div class="text-red-500 text-sm text-center">{{ error.password }}</div>
                    {% endif %}
                    <div>
                        <input type="password" id="password" name="password" placeholder="Entrez votre Mot de passe" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 {% if error.password %}border-red-500 focus:ring-red-500 bg-red-100{% else %}border-green-300 focus:ring-green-500{% endif %}">
                    </div>
                    {% if error.fields %}
                        <div class="text-red-500 text-sm text-center">{{ error.fields }}</div>
                    {% endif %}
                    <div>
                        <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            Se connecter
                        </button>
                    </div>
                </form>
                <div class="mt-6 text-center">
                    <a href="/register" class="text-sm text-green-800 hover:text-green-700 font-semibold">Inscription</a>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block script %}
    <script src="/assets/js/main.js"></script>
{% endblock %}
