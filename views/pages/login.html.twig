{% extends "../layouts/base.html.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/main.css">
	<link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block title %}
	<title>{{ title }}</title>
{% endblock %}

{% block main %}
	<main class="flex items-center justify-center h-[calc(100vh-8rem)]">
		<section class="w-full flex flex-col lg:flex-row lg:justify-around mt-8 xs:mt-4 md:mt-4 lg:mt-0 mx-2 gap-8">
			<div class="w-full lg:w-3/5 flex items-center justify-center m-8 lg:m-0">
				<article class="max-w-full p-6 bg-[#C3CEA3]/60 backdrop-blur-2xl rounded-lg shadow-md">
					<div class="flex items-center mb-8">
						<img src="/assets/images/Logo_final_sans_blanc.png" class="mr-3 h-20 sm:h-20" alt="Logo"/>
						<h1 class="text-white text-4xl font-semibold text-center">ArboTrack votre Gestionnaire Arboricole</h1>
					</div>
					<div>
						<p class="text-white text-lg">
							Lorem ipsum dolor sit amet consectetur adipisicing elit. Beatae neque asperiores id nulla,
							<br>consectetur a nihil, explicabo dolorum quo maiores incidunt nam, magni ipsam dolores ipsa nemo enim eos in?
						</p>
					</div>
				</article>
			</div>
			<div class="w-full lg:w-2/5 flex items-center justify-center">
				<div class="w-full max-w-lg p-6 bg-[#C3CEA3]/60 backdrop-blur-2xl rounded-lg shadow-md">
					<form action="/login" method="POST" class="w-full">
						<h2 class="text-green-800 text-2xl font-bold text-center mb-4">Se Connecter</h2>
						{% if error.mail %}
							<span class="text-red-500 text-sm text-center">{{ error.mail }}</span>
						{% endif %}
						<div class="mb-4">
							<input type="text" id="mail" name="mail" value="{{ mail|default('') }}" placeholder="Entrez votre Mail" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:outline-none
																																									       {% if error.mail %}border-red-500 focus:ring-red-500 bg-red-200{% else %}border-green-300 focus:ring-green-500 bg-white{% endif %}">
						</div>
						{% if error.password %}
							<span class="text-red-500 text-sm text-center">{{ error.password }}</span>
						{% endif %}
						<div class="mb-4">
							<input type="password" id="password" name="password" placeholder="Entrez votre Mot de passe" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:outline-none
																																										    {% if error.password %}border-red-500 focus:ring-red-500 bg-red-200{% else %}border-green-300 focus:ring-green-500 bg-white{% endif %}"/>
						</div>
						{% if error.fields %}
							<span class="block text-red-500 text-sm text-center mb-4">{{ error.fields }}</span>
						{% endif %}
						<button type="submit" class="cursor-pointer w-full mb-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-300">Se connecter</button>
						<a href="/register" class="text-green-800 font-semibold underline">Inscription</a>
					</form>
				</div>
			</div>
		</section>
	</main>
{% endblock %}

{% block script %}
	<script src="/assets/js/main.js"></script>
{% endblock %}
