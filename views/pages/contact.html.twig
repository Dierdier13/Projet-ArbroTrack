{% extends "../layouts/base.html.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/main.css">
	<link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block title %}
	<title>{{ title }}</title>
{% endblock %}

{% block main %}
	<main class="flex-grow flex items-center justify-center">
		<section class="flex flex-col gap-8 w-3xl my-8 mx-2">
			<h2 class="text-white text-center bg-[#1B3C01]/60 backdrop-blur-xl py-2 rounded-md text-2xl sm:text-3xl lg:text-4xl font-semibold">Contact
				<strong>ArboTrack</strong>
			</h2>
			<div class="w-full p-6 bg-[#1B3C01]/60 backdrop-blur-2xl rounded-lg shadow-md">
				<form action="/contact" method="POST" class="w-full">
					<div class="mb-4">
						<label for="objet" class="block mb-1 font-semibold text-white">Objet :</label>
						<input type="text" id="objet" name="objet" placeholder="Objet de votre demande" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:outline-none border-green-300 focus:ring-green-500 bg-white">
					</div>
					<div class="mb-4">
						<label for="mail" class="block mb-1 font-semibold text-white">Email :</label>
						<input type="email" id="mail" name="mail" placeholder="Entrez votre email" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:outline-none border-green-300 focus:ring-green-500 bg-white">
					</div>

					<div class="mb-4">
						<label for="content" class="block mb-1 font-semibold text-white">Message :</label>
						<textarea id="content" name="content" placeholder="Entrez votre demande" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:outline-none h-32 resize-none border-green-300 focus:ring-green-500 bg-white"></textarea>
					</div>
					{% if error.fields %}
						<span class="block text-red-500 text-sm text-center mb-4">{{ error.fields }}</span>
					{% endif %}

					<button type="submit" class="cursor-pointer w-full mb-4 py-2 bg-green-700 text-white rounded-md hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-300">Envoyer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}

{% block script %}
	<script src="/assets/js/main.js"></script>
	<script src="/assets/js/header.js"></script>
{% endblock %}
