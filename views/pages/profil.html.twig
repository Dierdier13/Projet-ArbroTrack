{% extends "../layouts/base.html.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/main.css">
{% endblock %}

{% block title %}
	<title>{{ title }}</title>
{% endblock %}

{% block main %}
	<main class="flex flex-col gap-8 w-full ml-0 lg:w-4/5 lg:ml-[20%] xl:w-5/6 xl:ml-[16.666%] 2xl:w-7/8 2xl:ml-[12.5%] min-h-[calc(100vh-3.5rem)] bg-[#50693C]/50 backdrop-blur-xs px-8 md:px-16 lg:px-24 xl:px-32 py-8">
		<section>
			<div class="w-full flex items-center justify-center">
				<h2 class="text-white text-xl md:text-2xl lg:text-4xl text-center bg-[#1B3C01]/60 backdrop-blur-2xl shadow-lg rounded-lg px-2 py-1">Profil de
					{{ user.lastname }}
					{{ user.firstname }}</h2>
			</div>
		</section>
		<section>
			<div class="flex flex-col mx-auto p-6 bg-[#1B3C01]/60 backdrop-blur-2xl shadow-lg rounded-lg gap-6">
				<div class="flex flex-col lg:flex-row gap-4">
					<div class="w-full lg:w-1/3 flex flex-col justify-between gap-2">
						<div class="w-full h-80">
							{% if user.avatar %}
								<img src="/{{ user.avatar }}" alt="Avatar" class="object-cover w-full h-full rounded-lg">
							{% else %}
								<img src="/assets/images/avatar.jpg" alt="Avatar vide" class="object-cover w-full h-full rounded-lg">
							{% endif %}
						</div>
						<div class="flex justify-center">
							<button onclick="openModal('editAvatarUserModal')" class="cursor-pointer w-10 h-8 min-w-[2.5rem] min-h-[2rem] flex items-center justify-center px-2 py-1 bg-green-600 rounded-md shadow hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-400/75 transition duration-300">
								<img src="/assets/images/edit-photo.png" alt="Modifier" class="w-6 h-6">
							</button>
						</div>
					</div>
					<div class="flex flex-col justify-between w-full lg:w-2/3 gap-2">
						<div class="flex flex-col lg:h-80 bg-white/20 backdrop-blur-3xl text-white space-y-4 shadow-lg rounded-lg p-4">
							<p>Nom :
								<span class="font-medium">{{ user.lastname }}</span>
							</p>
							<p>Pr√©nom :
								<span class="font-medium">{{ user.firstname }}</span>
							</p>
							<p>Mail :
								<span class="font-medium">{{ user.mail }}</span>
							</p>
						</div>
						<div class="flex justify-center gap-4">
							<button onclick="openModal('editUserModal')" class="cursor-pointer w-10 h-8 min-w-[2.5rem] min-h-[2rem] flex items-center justify-center px-2 py-1 bg-green-600 rounded-md shadow hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-400/75 transition duration-300">
								<img src="/assets/images/edit.png" alt="Modifier" class="w-6 h-6">
							</button>
							<button onclick="openModal('deleteUserConfirmModal')" class="cursor-pointer w-10 h-8 min-w-[2.5rem] min-h-[2rem] flex items-center justify-center px-2 py-1 bg-red-600 rounded-md shadow hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-red-400/75 transition duration-300">
								<img src="/assets/images/delete.png" alt="Supprimer" class="w-6 h-6">
							</button>
						</div>
					</div>
				</div>
			</div>
		</section>

	</main>

{% endblock %}
{% block script %}
	<script src="/assets/js/sidebar.js"></script>
	<script src="/assets/js/modal.js"></script>
	<script src="/assets/js/main.js"></script>
{% endblock %}
