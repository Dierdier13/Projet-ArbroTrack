<button id="mobile-menu-toggle" class="fixed top-2 left-2 z-50 lg:hidden">
  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
  </svg>
</button>

<header class="sidebar fixed z-40 flex flex-col top-0 left-0 w-1/2 sm:w-1/4 lg:w-1/6 xl:w-1/7 2xl:w-1/8 bg-[#1B3C01]/60 backdrop-blur-2xl h-screen border-r border-[#C3CEA3] transition-all duration-300 ease-in-out transform -translate-x-full lg:translate-x-0">
	<div class="flex items-center justify-center h-14">
		<h1 class="text-white text-2xl block"><strong>ArboTrack</strong></h1>
	</div>
	<div class="w-4/5 mx-auto">
		<hr class="border-t border-[#C3CEA3] hidden md:block">
	</div>
	<div class="flex flex-col justify-between h-[calc(100vh-3.5rem)] overflow-y-auto overflow-x-hidden flex-grow">
		<ul class="flex flex-col pt-8 space-y-1">
			<li class="px-5">
				<div class="flex flex-row items-center h-8">
					<div class="text-2xl font-semibold text-white tracking-wide block">Menu</div>
				</div>
			</li>
			<li>
				<a href="/" class="relative flex items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
					<span class="inline-flex justify-center items-center ml-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
						</svg>
					</span>
					<span class="ml-2 text-lg tracking-wide truncate">Propriétés</span>
				</a>
			</li>
			{% if not isPropertyPage %}
				<li>
					<a href="/property/{{ property.id }}" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
						<span class="inline-flex justify-center items-center ml-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h6v6H3zM15 3h6v6h-6zM3 15h6v6H3zM15 15h6v6h-6z"/>
							</svg>

						</span>
						<span class="ml-2 text-lg tracking-wide truncate">Dashboard</span>
					</a>
				</li>
				<li>
					<a href="/property/{{ property.id }}/treelist" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
						<span class="inline-flex justify-center items-center ml-4">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
								<path d="M12 3c2.5 0 4 1.5 4 4 0 1.2-.4 2-0.8 2.8 1 0.4 1.8 1.6 1.8 2.8 0 1.5-1 3-3 3H10c-2 0-3-1.5-3-3 0-1.2 0.8-2.4 1.8-2.8C8.4 9 8 8.2 8 7c0-2.5 1.5-4 4-4z"/>
								<path d="M11 22v-6h2v6"/>
							</svg>
						</span>
						<span class="ml-2 text-lg tracking-wide truncate">Arbres</span>
					</a>
				</li>
			{% endif %}
		</ul>
		<div class="w-4/5 mx-auto">
			<hr class="border-t border-[#C3CEA3]">
		</div>
		<ul class="flex flex-col space-y-1">
			<li class="px-5">
				<div class="flex flex-row items-center h-8">
					<div class="text-2xl font-semibold tracking-wide text-white block">Tasks</div>
				</div>
			</li>
			<li>
				<a href="#" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
					<span class="inline-flex justify-center items-center ml-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
						</svg>
					</span>
					<span class="ml-2 text-xl tracking-wide truncate">Available Tasks</span>
				</a>
			</li>
			<li>
				<a href="#" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
					<span class="inline-flex justify-center items-center ml-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
						</svg>
					</span>
					<span class="ml-2 text-xl tracking-wide truncate">Clients</span>
				</a>
			</li>
		</ul>
		<div class="w-4/5 mx-auto">
			<hr class="border-t border-[#C3CEA3]">
		</div>
		<ul class="flex flex-col pb-16 space-y-1">
			<li class="px-5">
				<div class="flex flex-row items-center h-8">
					<div class="text-2xl font-semibold tracking-wide text-white block">Settings</div>
				</div>
			</li>
			<li>
				<a href="/profil/{{ user.id }}" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
					<span class="inline-flex justify-center items-center ml-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
						</svg>
					</span>
					<span class="ml-2 text-xl tracking-wide truncate">Profil</span>
				</a>
			</li>
			<li>
				<button onclick="openModal('editUserModal')" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
					<span class="inline-flex justify-center items-center ml-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
					</span>
					<span class="ml-2 text-xl tracking-wide truncate">Paramètres</span>
				</button>
			</li>
			<li>
				<a href="/logout" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-green-50 text-white hover:text-green-800 border-l-4 border-transparent hover:border-green-500 pr-6">
					<span class="inline-flex justify-center items-center ml-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
						</svg>
					</span>
					<span class="ml-2 text-lg tracking-wide truncate">Déconnexion</span>
				</a>
			</li>
		</ul>
	</div>
</header>
